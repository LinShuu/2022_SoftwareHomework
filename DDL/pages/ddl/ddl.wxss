/* pages/ddl/ddl.wxss */
page {
  background-color: #f6f6f6;
}

.date-string {
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
}

.main {
  width: 100%;
  /* height: 400rpx; */
  font-size: 14rpx;
  position: relative;
  overflow-x: hidden;
  overflow-y: auto;
}

.more{
  width: 100%;
  background-color:#F6FFF5;
  font-size: 30rpx;
  border: 1rpx solid #e0e0e0;
  padding-left: 80rpx;
  padding-top: 35rpx;
}


.todos {
  margin-left: 40rpx;
  padding-top: 0%;
  width: 90%;
  border: 1rpx solid #e0e0e0;border: 1rpx solid #e0e0e0;
  border-radius: 30rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}


.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  font-size: 60rpx;
  margin: 100rpx 50rpx 50rpx;
  color: #444;
}

.empty .content {
  color: #666;
  text-align: center;
}

.item{
  margin-top: 10%;
  border-radius: 30rpx;
  background-color:#FFFFFF;
  padding:15rpx;
}

.colomn{
  display: flex;
  border: 1rpx solid #797379;
}

.type{
  background-color: aquamarine;
  width: 200rpx;
  text-align: center;
  border-radius: 20rpx ;
}
